{
  "name": "clipboard-polyfill",
  "version": "2.7.0",
  "description": "A polyfill for the asynchronous clipboard API",
  "author": "Lucas Garron <code@garron.net> (https://garron.net/)",
  "license": "MIT",
  "main": "build/clipboard-polyfill.js",
  "types": "build/clipboard-polyfill.d.ts",
  "homepage": "https://github.com/lgarron/clipboard-polyfill",
  "repository": {
    "type": "git",
    "url": "https://github.com/lgarron/clipboard-polyfill"
  },
  "bugs": {
    "url": "https://github.com/lgarron/clipboard-polyfill/issues"
  },
  "scripts": {
    "prebuild": "rm ./build/*",
    "build": "tsc",
    "postbuild": "uglifyjs-folder build -yeo build -x .js",
    "dev": "tsc --watch",
    "setup": "yarn install",
    "test": "yarn build && jest",
    "test-browser": "yarn build && http-server test/browser -o -c 0 -a localhost -p 8080",
    "build-for-git": "git stage -f build/*.js build/*d.ts",
    "deploy": "rsync -avz ./ garron.net:~/arron.net/code/clipboard-polyfill/ --exclude .git --exclude node_modules",
    "deploy-npm": "git push --tags origin && git push origin master && yarn publish"
  },
  "devDependencies": {
    "@types/jest": "^24.0.0",
    "concurrently": "^4.1.0",
    "cross-env": "^5.2.0",
    "es6-promise": "^4.2.5",
    "http-server": "^0.11.1",
    "jest": "^23.6.0",
    "ts-jest": "^23.10.5",
    "typescript": "^3.3.3",
    "uglifyjs-folder": "^1.5.1"
  },
  "keywords": [
    "clipboard",
    "HTML5",
    "copy",
    "copying",
    "cut",
    "paste",
    "execCommand",
    "setData",
    "getData",
    "polyfill"
  ],
  "files": [
    "/build"
  ]
}
