{
  "compilerOptions": {
    "outDir": "./build",
    "rootDir": "./lib",
    "forceConsistentCasingInFileNames": true,
    "alwaysStrict": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "lib": ["es6", "dom"],
    "target": "es5",
    "module": "commonjs",
		"moduleResolution": "node",
    "declaration": true,
    "noFallthroughCasesInSwitch": true,
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"noUnusedLocals": true,
		"removeComments": true,
  },
  "include": ["./lib/*.ts"],
  "exclude": ["experiment", "build", "test"]
}
